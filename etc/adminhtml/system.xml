<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="gene" translate="label" sortOrder="130">
            <label>Gene Commerce</label>
        </tab>
        <section id="gene_better_checkout" translate="label comment" type="text" sortOrder="160" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Checkout</label>
            <tab>gene</tab>
            <resource>Gene_BetterCheckout::config</resource>
            <group id="general" translate="label comment" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>General</label>
                <field id="enabled" translate="label comment" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="0" canRestore="1">
                    <label>Enable Module</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment><![CDATA[Enable or disable the Gene Better Checkout.]]></comment>
                </field>
                <group id="adyen" translate="label comment" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Adyen</label>
                    <depends>
                        <field id="enabled">1</field>
                    </depends>
                    <field id="adyen_auth_token" translate="label comment" sortOrder="10" type="text" showInDefault="1" showInWebsite="1" showInStore="0" >
                        <label>Adyen Auth Token</label>
                        <comment><![CDATA[The Auth Token allowing access to the Adyen endpoints.]]></comment>
                    </field>
                </group>
                <group id="loqate" translate="label comment" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Loqate</label>
                    <depends>
                        <field id="enabled">1</field>
                    </depends>
                    <field id="loqate_enabled" translate="label comment" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                        <label>Enable Loqate</label>
                        <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                        <comment><![CDATA[Enable or disable Loqate in the Checkout.]]></comment>
                    </field>
                    <field id="loqate_api_key" translate="label comment" sortOrder="20" type="text" showInDefault="1" showInWebsite="1" showInStore="0" >
                        <label>Loqate API Key</label>
                        <comment><![CDATA[Your Loqate API key if using Loqate.]]></comment>
                    </field>
                </group>
            </group>
        </section>
    </system>
</config>
